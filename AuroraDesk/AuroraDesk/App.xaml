<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="AuroraDesk.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:local="using:AuroraDesk">

    <!-- 
      说明：
      1) controls:XamlControlsResources 合并 WinUI 3 默认控件样式与资源，必须有。
      2) ThemeDictionaries 中给出示例全局画刷/颜色，按 Light/Dark/HighContrast 自动切换。
      3) 你可以在资源里继续放自定义 Style（按钮、文本等）或应用级常量。
    -->
    <Application.Resources>
        <ResourceDictionary>

            <!-- 必须：合并 WinUI 控件资源 -->
            <ResourceDictionary.MergedDictionaries>
                <controls:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>

            <!-- 应用级常用资源（示例，可按需增删） -->
            <x:String x:Key="AppDisplayName">AuroraDesk</x:String>
            <Thickness x:Key="AppContentMargin">12</Thickness>

            <!-- 按主题提供的全局画刷示例（可在页面里用 {ThemeResource AppBackgroundBrush} 等） -->
            <ResourceDictionary.ThemeDictionaries>
                <!-- 浅色主题 -->
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#FFF6F6F6"/>
                    <SolidColorBrush x:Key="AppForegroundBrush" Color="#000000"/>
                    <!-- 例：用于标题栏/强调色 -->
                    <SolidColorBrush x:Key="AppAccentBrush" Color="{ThemeResource SystemAccentColor}"/>
                </ResourceDictionary>

                <!-- 深色主题 -->
                <ResourceDictionary x:Key="Dark">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="#1E1E1E"/>
                    <SolidColorBrush x:Key="AppForegroundBrush" Color="#FFFFFF"/>
                    <SolidColorBrush x:Key="AppAccentBrush" Color="{ThemeResource SystemAccentColor}"/>
                </ResourceDictionary>

                <!-- 高对比主题 -->
                <ResourceDictionary x:Key="HighContrast">
                    <SolidColorBrush x:Key="AppBackgroundBrush" Color="{ThemeResource SystemColorWindowColor}"/>
                    <SolidColorBrush x:Key="AppForegroundBrush" Color="{ThemeResource SystemColorWindowTextColor}"/>
                    <SolidColorBrush x:Key="AppAccentBrush" Color="{ThemeResource SystemColorHighlightColor}"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <!-- 你可以在这里追加控件 Style，例如：
            <Style TargetType="TextBlock">
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>
            -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
